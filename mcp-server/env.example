# EVM MCP Server Configuration
# Copy to .env and adjust values. Do NOT commit your real .env file.

# Required: JSON map of chain_id -> RPC URL for EVM-compatible networks
# Use numeric chain IDs (https://chainlist.org/ for reference)
# Supported EVM chains include:
# - Ethereum Mainnet (1)
# - Ethereum Goerli Testnet (5)
# - Binance Smart Chain (56)
# - BSC Testnet (97)
# - Polygon (137)
# - Polygon Mumbai Testnet (80001)
# - Arbitrum One (42161)
# - Optimism (10)
# - Base (8453)
# - Avalanche C-Chain (43114)
# - Fantom (250)
# And many more EVM-compatible networks
CHAIN_RPC_URLS={
  "1": "https://mainnet.infura.io/v3/YOUR-INFURA-KEY",
  "5": "https://goerli.infura.io/v3/YOUR-INFURA-KEY",
  "56": "https://bsc-dataseed.binance.org/",
  "97": "https://data-seed-prebsc-1-s1.binance.org:8545/",
  "137": "https://polygon-rpc.com/",
  "80001": "https://rpc-mumbai.maticvigil.com/",
  "42161": "https://arb1.arbitrum.io/rpc",
  "10": "https://mainnet.optimism.io",
  "8453": "https://mainnet.base.org",
  "43114": "https://api.avax.network/ext/bc/C/rpc",
  "250": "https://rpc.fantom.network"
}

# Default chain ID to use when none is specified (e.g., 1 for Ethereum Mainnet, 56 for BSC)
DEFAULT_CHAIN_ID=56

# Default gas settings for EVM transactions
DEFAULT_GAS_LIMIT=21000      # Standard gas limit for simple transfers
DEFAULT_GAS_PRICE=5000000000 # 5 Gwei (adjust based on network conditions)

# HTTP server configuration
PORT=8080                    # Port for the HTTP server (when not in MCP mode)

# Wallet configuration
WALLET_STORAGE_PATH="./wallets.json"  # Path to store wallet data

# Optional: Private key for transaction signing (for development only)
# WARNING: Never use in production without proper security measures!
# TX_PRIVATE_KEY=0x...

# Optional: API Keys for blockchain explorers (for enhanced functionality)
# ETHERSCAN_API_KEY=YOUR_ETHERSCAN_KEY
# BSCSCAN_API_KEY=YOUR_BSCSCAN_KEY
# POLYGONSCAN_API_KEY=YOUR_POLYGONSCAN_KEY
